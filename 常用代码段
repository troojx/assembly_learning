start:
        mov ax,data
        mov ds,data     ;ds存放data的段地址-------可以使用SI作为偏移地址的寄存器

输出：
  1.输出str1
    mov dx,str1
    mov ah,09h
    int 21h
  2.输出换行符
    crlf db 0dh,0ah,'$'

    mov dx,crlf
    mov ah,09h
    int 21H

输入：
  第一种：一次读入整个字符串
          mov ah,0Ah
          lea dx,str  ;存入的目标变量
          int 21H
  第二种：一次读入一个字符（包括回车）
          mov ah,01h
          lea dx,str
          int 21H
